<%= form_for([@post, @post.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :Название %><br />
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.label :position %><br />
    <%= f.text_area :position %>
  </div>
  <div class="field">
    <%= f.label :date %><br />
    <%= f.text_area :date %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

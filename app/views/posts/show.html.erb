<p id="notice"><%= notice %></p>
<%= render "layouts/head" %>

<div class="cover">
  <div class="maininfo">
    <p>
      <strong>Название:</strong>
      <%= @post.name %>
    </p>

    <p>
      <strong>Тайтл:</strong>
      <%= @post.title %>
    </p>

    <p>
      <strong>Описание:</strong>
      <%= @post.description %>
    </p>

    <p class="tags">
      <strong>Теги:</strong>
      <%= @post.tag %>
    </p>
  </div>
  <%= image_tag(@post.image.url, alt: 'Image', :class => "style_image")  if @post.image? %>
</div>


<div class="new_com">
  <h3><mark>Добавить новое событие:</mark></h3>
<%= render "comments/form" %>
</div>

<div class="ocassions">
  <h3><mark>События таймлайна:</mark></h3>
<%= render @post.comments.select(&:persisted?) %>
</div>

<div class="bott">
  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>
</div>

<%= render "layouts/footer" %>

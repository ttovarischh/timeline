<%= render "layouts/head" %>
<p id="notice"><%= notice %></p>

<h1 class="hpost"><mark><strong>Posts&nbsp;&nbsp;</strong></mark></h1>

<table>
  <thead class="mm">
    <tr>
      <th><mark-2>Название</mark-2></th>
      <th><mark-2>Тайтл</mark-2></th>
      <!-- <th>Description</th> -->
      <th><mark-2>Теги</mark-2></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.title %></td>

        <td><%= post.tag %></td>
        <td class="postik"><%= link_to 'Show', post %></td>
        <td class="postik"><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= button_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<span class="neww"><%= link_to 'New Post', new_post_path %></span>
<%= render "layouts/footer" %>
